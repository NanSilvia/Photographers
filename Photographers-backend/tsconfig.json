{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "target": "ES2022",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "outDir": "dist/"
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}